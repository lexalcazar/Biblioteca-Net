@model Biblioteca.Controllers.CrearUsuarioVm

@{
    ViewData["Title"] = "Crear usuario";
}

<style>
    .form-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 20px;
    }

    .form-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }

    .form-header {
        text-align: center;
        color: #007bff;
        font-size: 1.8rem;
        margin-bottom: 10px;
        border-bottom: 3px solid #007bff;
        padding-bottom: 15px;
    }

    .success-message {
        background: #d4edda;
        border: 1px solid #c3e6cb;
        border-radius: 8px;
        padding: 12px;
        margin: 15px 0;
        color: #155724;
    }

    .error-messages {
        background: #f8d7da;
        border: 1px solid #f5c6cb;
        border-radius: 8px;
        padding: 12px;
        margin: 15px 0;
        color: #721c24;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ced4da;
        padding: 10px;
        width: 100%;
        transition: border-color 0.3s ease;
    }

    .form-control:focus {
        border-color: #007bff;
        outline: none;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 5px;
        display: block;
    }

    .btn-custom {
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        width: 100%;
        margin-top: 10px;
    }

    .btn-primary {
        background: #007bff;
        color: white;
    }

    .btn-primary:hover {
        background: #0056b3;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 123, 255, 0.3);
    }
</style>

<div class="form-container">
    <div class="form-card">
        <h1 class="form-header">👤 Crear Usuario</h1>

        @if (TempData["ok"] != null)
        {
            <div class="success-message">✅ @TempData["ok"]</div>
        }

        @if (ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
        {
            <div class="error-messages">
                @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>❌ @err.ErrorMessage</div>
                }
            </div>
        }

        <form asp-action="CrearUsuario" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>📧 Email</label>
                <input asp-for="Email" class="form-control" placeholder="usuario@ejemplo.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>🔒 Contraseña</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Mínimo 6 caracteres" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-custom btn-primary">✓ Crear</button>
        </form>
    </div>
</div>
