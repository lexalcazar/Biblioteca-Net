@model List<Biblioteca.Controllers.UsuarioListaVm>

@{
    ViewData["Title"] = "Usuarios";
}

<h2>Usuarios</h2>

@if (!Model.Any())
{
    <p>No hay usuarios.</p>
}
else
{
    <table class="table" style="border-collapse: collapse; border: 1px solid #dee2e6;">
        <thead>
            <tr>
                <th style="border: 1px solid #dee2e6; padding: 8px;">Email</th>
                <th style="border: 1px solid #dee2e6; padding: 8px;">UserName</th>
                <th style="border: 1px solid #dee2e6; padding: 8px;">Id</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td style="border: 1px solid #dee2e6; padding: 8px;">@u.Email</td>
                    <td style="border: 1px solid #dee2e6; padding: 8px;">@u.UserName</td>
                    <td style="border: 1px solid #dee2e6; padding: 8px; font-size:12px">@u.Id</td>
                </tr>
            }
        </tbody>
    </table>
}
